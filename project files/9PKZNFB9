  <!-- JavaScript to switch between sections via hash -->
  <script>
    function showSection() {
      document
        .querySelectorAll('body > section')
        .forEach(sec => {
          const id = location.hash.slice(1) || 'landing';
          sec.style.display = sec.id === id 
            ? (sec.classList.contains('wrapper') ? 'flex' : 'block') 
            : 'none';
        });
    }
    window.addEventListener('hashchange', showSection);
    window.addEventListener('load', showSection);
  </script>

